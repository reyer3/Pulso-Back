# ðŸ”§ Environment Configuration Template
# Copy to .env and fill with your values

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_VERSION=v1
API_TITLE="Pulso-Back API"

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pulso_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_URL=postgresql://postgres:password@localhost:5432/pulso_db

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
BIGQUERY_PROJECT_ID=mibot-222814
BIGQUERY_DATASET=BI_USA
BIGQUERY_LOCATION=US

# ETL Configuration
ETL_SCHEDULE_CRON="0 */3 * * *"
ETL_BATCH_SIZE=10000
ETL_TIMEOUT_SECONDS=3600
ETL_RETRY_ATTEMPTS=3

# Cache Configuration
CACHE_TTL_DASHBOARD=1800  # 30 minutes
CACHE_TTL_EVOLUTION=3600  # 1 hour
CACHE_TTL_ASSIGNMENT=7200 # 2 hours

# Security
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here


# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENDPOINT=/metrics

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/pulso-back.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5